{
  "name": "marp-preview",
  "version": "1.0.0",
  "description": "A simple desktop app to preview Marp markdown files in real-time.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "test": "jest --coverage",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "marp",
    "markdown",
    "preview"
  ],
  "author": {
    "name": "Masanori Kado",
    "email": "kdmsnr@gmail.com",
    "url": "https://kdmsnr.com"
  },
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@marp-team/marp-cli": "^4.2.3",
    "@marp-team/marp-core": "^4.1.0",
    "@marp-team/marpit": "^3.1.3",
    "chokidar": "^4.0.3"
  },
  "devDependencies": {
    "electron": "^39.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^29.7.0",
    "prettier": "^3.7.4"
  },
  "build": {
    "appId": "com.kdmsnr.marp-preview",
    "productName": "Marp Preview",
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "asarUnpack": [
      "node_modules/@marp-team/marp-cli/**",
      "node_modules/puppeteer/**"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.js"
    ]
  }
}
